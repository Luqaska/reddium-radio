{
  "name": "reddio-next",
  "version": "0.1.0",
  "description": "Reddit powered radio",
  "main": "server.js",
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "frontend:build": "NODE_ENV=production webpack -p --progress",
    "frontend:watch": "webpack --watch",
    "tsc:build": "tsc",
    "tsc:watch": "tsc -w",
    "server:watch": "nodemon server.js",
    "start": "tsc && node server.js",
    "test": "jest"
  },
  "author": "Yanglin Zhao",
  "license": "MIT",
  "dependencies": {
    "apollo-client": "1.0.4",
    "babel-core": "6.22.1",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "dataloader": "1.3.0",
    "dotenv": "4.0.0",
    "graphql": "0.9.3",
    "graphql-server-hapi": "0.7.2",
    "graphql-tag": "2.0.0",
    "hapi": "16.1.0",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.4",
    "normalize.css": "6.0.0",
    "react": "15.4.2",
    "react-addons-css-transition-group": "15.4.2",
    "react-apollo": "1.0.2",
    "react-dom": "15.4.2",
    "react-player": "0.17.0",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "@types/graphql": "0.9.0",
    "@types/hapi": "16.0.3",
    "@types/isomorphic-fetch": "0.0.33",
    "@types/jest": "19.2.2",
    "@types/lodash": "4.14.63",
    "@types/node": "7.0.14",
    "@types/promise": "7.1.30",
    "concurrently": "3.4.0",
    "css-loader": "0.28.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "jest": "19.0.2",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-cljs-test": "^0.1.0",
    "node-sass": "4.5.0",
    "nodemon": "1.11.0",
    "prettier": "1.2.2",
    "sass-loader": "6.0.3",
    "ts-jest": "19.0.14",
    "tslint": "5.1.0",
    "typescript": "2.2.2",
    "url-loader": "0.5.7",
    "webpack": "2.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
